<div>
    <h1>Carrito</h1>
    {{#each response.products}}
        <ul>
            <li style="list-style: none; margin-bottom: 10px; border: 1px solid; padding: 1rem">
                <h2 style="text-align: center;">{{this.product.title}}</h2>
                <p>Precio: ${{this.product.price}}</p>
                <p>Cantidad: {{this.quantity}}</p>
                 <button onclick="deleteFromCart('{{../response._id}}','{{this.product._id}}')">Remover</button> 
            </li> 
        </ul>
    {{/each}}
</div>
<button onclick="purchaseCart('{{response._id}}','{{user.email}}')">Comprar</button>


{{!-- <script src="/js/products.js"></script> --}}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    
    function purchaseCart(cartId, email){
  fetch(`/api/carts/${cartId}/${email}/purchase`, {
    method: "GET",
  }).then((res) => {
    if (res.status == 200) {
        Swal.fire({
        title: "Compra exitosa!",
        text: "Presiona OK para volver a la pÃ¡gina principal.",
        icon: "success"
    }).then(() => {
            window.location.replace("/products");
        });
     }
  });
}
</script>